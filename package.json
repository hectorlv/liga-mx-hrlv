{
  "name": "liga-mx-hrlv",
  "description": "Web component liga-mx-hrlv following open-wc recommendations",
  "license": "MIT",
  "author": "liga-mx-hrlv",
  "version": "4.0.1-SNAPSHOT",
  "type": "module",
  "scripts": {
    "lint": "eslint \"src/**/*.{ts,js,html}\"",
    "format": "eslint \"src/**/*.{ts,js,html}\" --fix && prettier \"src/**/*.{ts,js,html,css,json,md}\" --write",
    "build": "rimraf dist && rollup -c rollup.config.js --bundleConfigAsCjs && npm run analyze",
    "start:build:open": "npm run start:build --open",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html",
    "start": "web-dev-server",
    "typecheck": "tsc --noEmit",
    "analyze": "custom-elements-manifest analyze --globs \"src/**/*.{ts,js}\" --exclude \"**/dist/**\" --exclude \"**/node_modules/**\" --outdir dist"
  },
  "dependencies": {
    "@material/web": "^2.4.1",
    "firebase": "^12.7.0",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@eslint/js": "^9.39.2",
    "@open-wc/eslint-config": "^13.0.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-html": "^2.4.1",
    "@web/rollup-plugin-import-meta-assets": "^2.3.0",
    "axe-core": "^4.11.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "^2.1.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "rollup": "^4.55.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-image": "^1.0.2",
    "rollup-plugin-workbox": "^8.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "customElements": "dist/custom-elements.json",
  "overrides": {
    "glob": "11.1.0"
  }
}
