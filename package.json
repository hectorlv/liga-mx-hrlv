{
  "name": "liga-mx-hrlv",
  "description": "Web component liga-mx-hrlv following open-wc recommendations",
  "license": "MIT",
  "author": "liga-mx-hrlv",
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build:open": "npm run build && web-dev-server --root-dir dist --app-index index.html --open",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html",
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server"
  },
  "dependencies": {
    "@material/web": "^2.1.0",
    "@polymer/iron-icon": "^3.0.1",
    "@polymer/iron-icons": "^3.0.1",
    "firebase": "^10.13.1",
    "lit": "^3.2.0",
    "rollup-plugin-image": "^1.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/eslint-config": "^12.0.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-html": "^2.3.0",
    "@web/rollup-plugin-import-meta-assets": "^2.2.1",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "file-loader": "^6.2.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^2.60.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-image": "^1.0.2",
    "rollup-plugin-workbox": "^8.1.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
