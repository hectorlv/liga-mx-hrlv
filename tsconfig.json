{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2022"],
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "moduleDetection": "force",
    "isolatedModules": true,

    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "outDir": "dist",
    "noEmit": true
  },
  "include": ["src"]
}
